div id="group_display" >

<h3 data-id="{{results.[0].groupID}}" id="groupName">{{results.[0].groupName}}</h3>

<p class="groupHeaders">Description</p>
<p>{{results.[0].groupDescription}}</p>



<div class="panel panel-default groupHeaders">
  <div class="panel-heading">
    <h2 class="panel-title">Drivers</h2>
  </div>
  <div class="panel-body">
   	<ul class="list-group">
		{{#each allDriverInfo}}
  			<li class="list-group-item"><h3>{{driverUserName}}</h3><p>Info: {{dateDriving}}</p><p>Seats: {{seatsAvailable}}</p> <input type="submit" value="Join The Ride" data-id="{{driverId}}"  class="btn btn-primary passenger"></li>
		{{/each}}
	</ul>
  </div>
</div>
{{#if areYouDriver}}

    <input type="submit" value="Become Driver" data-id="{{results.[0].groupID}}" id="driver" class="btn btn-primary" style="display:none">

{{else}}

    <input type="submit" value="Become Driver" data-id="{{results.[0].groupID}}" id="driver" class="btn btn-primary">

{{/if}}



{{#if isMemberInGroup}}

    <input type="submit" value="Leave" data-groupId="{{groupID}}" id="leave" class="btn btn-primary">
    <input type="submit" value="Join" data-groupId="{{groupID}}" style="display:none" id="join" class="btn btn-primary">


{{else}}
   <input type="submit" value="Leave" data-groupId="{{groupID}}" style="display:none" id="leave" class="btn btn-primary">
  <input type="submit" value="Join" data-groupId="{{groupID}}" id="join" class="btn btn-primary">

{{/if}} 

<!--driver-->
	<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="driverModal"  data-backdrop="static">
		<div class="modal-dialog modal-sm">
    		<div class="modal-content">
    			  <div class="modal-header">
      				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      				<h1 class="modal-title">Become a Driver</h1>
      			</div>
      			<div class="modal-body">
        			<form id="driverForm" method="post" action="/driver">
  						<div class="form-group">
    						<label for="seats">Seats available</label>
    						<input type="text" class="form-control" id="seats"  required>
 						  </div>
  						<div class="form-group">
    						<label for="info">Details</label>
    						<input type="text" class="form-control" id="info"   required>
  						</div>
  						<input type="submit" class="btn btn-default" id="driverSubmit">
              </form>
      			</div>

			</div>
  		</div>
	</div><!--end driver modal-->
    
</div>